%h3= @question.title
%p= @question.body

- @question.answers.each do |answer|
  %ul
    %li= answer.user.email
    %li= answer.body
    %li
    - if user_signed_in? && current_user.author_of?(answer)
      = link_to 'Delete', question_answer_path(@question, answer.id), method: :delete

- if user_signed_in?
  - if @answer.errors.any?
    = render 'shared/errors', object: @answer

  = form_for [@question, @answer] do |f|
    = f.label :body, 'answer'
    = f.text_field :body
    = f.submit 'Submit'
- else
  %p please sign in/sign up for answer
