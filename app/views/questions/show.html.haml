%h3= @question.title

- @question.answers.each do |a|
  %ul
    %li= a.user.email
    %li= a.body
    %li
      - if a.user == current_user
        = link_to 'Delete', question_answer_path(@question.id, a.id), method: :delete

- if user_signed_in?
  -#= form_for @question.answers.new, url: question_answers_path(question_id: @question.id) do |f|
  = form_for [@question, @answer] do |f|
    = f.label :body, 'answer'
    = f.text_field :body
    = f.hidden_field :user_id, value: current_user.id
    = f.submit 'Submit'
- else
  %p please sign in/sign up for answer
